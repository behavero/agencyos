{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/sync-transactions",
      "schedule": "*/15 * * * *",
      "comment": "Sync Fanvue transactions every 15 minutes for LIVE data"
    },
    {
      "path": "/api/cron/daily-refresh",
      "schedule": "*/5 * * * *",
      "comment": "Update subscribers/followers/messages every 5 minutes for LIVE data"
    },
    {
      "path": "/api/cron/check-late-shifts",
      "schedule": "0 */6 * * *",
      "comment": "Check late shifts every 6 hours (not critical)"
    },
    {
      "path": "/api/cron/check-missed-posts",
      "schedule": "0 */6 * * *",
      "comment": "Check missed posts every 6 hours (not critical)"
    }
  ],
  "redirects": [
    {
      "source": "/dashboard/settings",
      "destination": "/dashboard",
      "permanent": false
    },
    {
      "source": "/dashboard/finance/analytics",
      "destination": "/dashboard",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/api/analytics/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=300"
        }
      ]
    },
    {
      "source": "/api/agency/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=30, stale-while-revalidate=60"
        }
      ]
    }
  ]
}
